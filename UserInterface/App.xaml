<Application x:Class="UserInterface.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:UserInterface"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             Startup="Start">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ListViewItem">
                <EventSetter Event="MouseLeftButtonUp" Handler="ListViewItem_MouseLeftButtonUp" />
            </Style>
            <system:Double x:Key="smallFontSize">14</system:Double>
            <system:Double x:Key="medFontSize">18</system:Double>
            <system:Double x:Key="bigFontSize">24</system:Double>
            <Style TargetType="FrameworkElement" x:Key="StandardMargin">
                <Setter Property="Margin" Value="5, 5, 5, 5" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
